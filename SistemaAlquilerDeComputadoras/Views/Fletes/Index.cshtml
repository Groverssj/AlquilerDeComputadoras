@model IEnumerable<SistemaAlquilerDeComputadoras.Models.Flete>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #333; /* Fondo gris oscuro */
            color: green; /* Letras verdes para mejor contraste */
        }

        .table thead {
            background-color: black; /* Encabezado de la tabla negro */
            color: green
        }

        .table tbody td {
            color: white; /* Letras verdes en el contenido de la tabla */
        }

        .table tbody tr {
            border: 1px solid green; /* Bordes de las filas en verde */
        }

        .table {
            border: 2px solid green; /* Borde de la tabla en verde */
        }

        .btn {
            margin-right: 5px; /* Espacio entre botones */
            color: white; /* Letras blancas en los botones */
            border: 1px solid transparent; /* Borde transparente por defecto */
            padding: 5px 10px;
            text-decoration: none; /* Sin subrayado */
            display: inline-block;
        }

        .btn-primary {
            background-color: #333; /* Color de fondo azul para los botones primarios */
            border-color: green; /* Borde azul para los botones primarios */
        }

        .btn-warning {
            background-color: black; /* Fondo amarillo para botones de advertencia */
            border-color: green; /* Borde amarillo para botones de advertencia */
            color: white; /* Letras negras en los botones de advertencia */
        }

        .btn-info {
            background-color: dimgray; /* Fondo azul claro para botones de información */
            border-color: lawngreen; /* Borde azul claro para botones de información */
        }

        .btn-danger {
            background-color: black; /* Fondo rojo para botones de peligro */
            border-color:lawngreen; /* Borde rojo para botones de peligro */
        }
    </style>
</head>
<body>
    <h1 class="display-4">Lista de Fletes</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Crear Nuevo Flete</a>
    </p>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Costo)</th>
                <th>@Html.DisplayNameFor(model => model.Fecha)</th>
                <th>@Html.DisplayNameFor(model => model.HoraInicio)</th>
                <th>@Html.DisplayNameFor(model => model.HoraFinal)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Costo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                    <td>@Html.DisplayFor(modelItem => item.HoraInicio)</td>
                    <td>@Html.DisplayFor(modelItem => item.HoraFinal)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.NroRecibo" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.NroRecibo" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.NroRecibo" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
