@model IEnumerable<SistemaAlquilerDeComputadoras.Models.Equipo>

@{
    Layout = null;
    ViewData["Title"] = "Index";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Game & Net Rental</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #2c2c2c;
            color: white;
        }

        .table {
            color: white;
        }

            .table thead th {
                border-bottom: 2px solid white;
            }

            .table tbody tr {
                border-bottom: 1px solid white;
            }

            .table tbody td {
                color: white;
            }

        .btn-primary, .btn-warning, .btn-info, .btn-danger {
            margin-right: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-primary:hover, .btn-warning:hover, .btn-info:hover, .btn-danger:hover {
                opacity: 0.8;
            }

        a {
            color: white;
        }

            a:hover {
                color: white;
            }
    </style>
</head>

<body>
    <center>
        <h1>NetTech Space</h1>
    </center>
    <p>
        <a class="btn btn-info" asp-action="Login">Iniciar Sesión</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Almacenamiento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Foto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pantalla)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Procesador)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ram)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Resolucion)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Almacenamiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Foto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pantalla)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Procesador)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ram)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Resolucion)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
