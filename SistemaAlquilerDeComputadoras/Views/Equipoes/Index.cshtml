@model IEnumerable<SistemaAlquilerDeComputadoras.Models.Equipo>

@{
    ViewData["Title"] = "Lista de Equipos";
}

<h1 class="text-white">Lista de Equipos</h1>

<style>
    body {
        background-color: #2c2c2c;
        color: white;
    }

    .table {
        color: white;
    }

    .table thead th {
        border-bottom: 2px solid white;
    }

    .table tbody tr {
        border-bottom: 1px solid white;
    }

    .table tbody td {
        color: white;
    }

    .btn-primary, .btn-warning, .btn-info, .btn-danger {
        margin-right: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-primary:hover, .btn-warning:hover, .btn-info:hover, .btn-danger:hover {
        opacity: 0.8;
    }

    a {
        color: white;
    }

    a:hover {
        color: white;
    }
</style>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Codigo)</th>
            <th>@Html.DisplayNameFor(model => model.Foto)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>@Html.DisplayNameFor(model => model.Almacenamiento)</th>
            <th>@Html.DisplayNameFor(model => model.Pantalla)</th>
            <th>@Html.DisplayNameFor(model => model.Procesador)</th>
            <th>@Html.DisplayNameFor(model => model.Ram)</th>
            <th>@Html.DisplayNameFor(model => model.Resolucion)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                <td>
                    @if (item.Foto != null)
                    {
                        <img src="~/fotos/@item.Foto" class="img-thumbnail" width="180px" />
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                <td>@Html.DisplayFor(modelItem => item.Almacenamiento)</td>
                <td>@Html.DisplayFor(modelItem => item.Pantalla)</td>
                <td>@Html.DisplayFor(modelItem => item.Procesador)</td>
                <td>@Html.DisplayFor(modelItem => item.Ram)</td>
                <td>@Html.DisplayFor(modelItem => item.Resolucion)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Codigo" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Codigo" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Codigo" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
