@model SistemaAlquilerDeComputadoras.Models.Equipo

@{
    ViewData["Title"] = "Eliminar";
}

<h1 class="text-white">Eliminar</h1>

<h3 class="text-white">¿Estás seguro de que deseas eliminar esto?</h3>
<div>
    <h4 class="text-white">Equipo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Almacenamiento)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.Almacenamiento)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.Foto)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Pantalla)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.Pantalla)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Procesador)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.Procesador)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Ram)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.Ram)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Resolucion)
        </dt>
        <dd class="col-sm-10 text-light">
            @Html.DisplayFor(model => model.Resolucion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Codigo" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </form>
</div>

<style>
    body {
        background-color: #2c2c2c;
        color: white;
    }

    h1, h3, h4, dt {
        color: white;
    }

    dd {
        color: #d3d3d3;
    }

    .btn-danger, .btn-secondary {
        margin-top: 10px;
    }

    hr {
        border-top: 1px solid #444;
    }
</style>
