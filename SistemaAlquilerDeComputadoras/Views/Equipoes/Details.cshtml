@model SistemaAlquilerDeComputadoras.Models.Equipo

@{
    ViewData["Title"] = "Detalles del Equipo";
}

<h1 class="display-4">Detalles del Equipo</h1>

<style>
    body {
        background-color: darkslateblue;
        color: white;
    }

    h1, h4, dt {
        color: white;
    }

    dd {
        color: #d3d3d3;
    }

    .btn-primary, .btn-secondary {
        margin-top: 10px;
    }

    hr {
        border-top: 1px solid #444;
    }
</style>

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <h4 class="card-title">Equipo</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Almacenamiento)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Almacenamiento)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Estado)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Foto)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Foto)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Pantalla)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Pantalla)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Procesador)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Procesador)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Ram)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Ram)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Resolucion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Resolucion)
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Codigo">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
</div>
