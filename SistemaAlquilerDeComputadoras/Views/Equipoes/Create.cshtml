@model SistemaAlquilerDeComputadoras.Models.Equipo

@{
    ViewData["Title"] = "Crear Equipo";
}

<style>
    body {
        background-color: dimgrey; 
    }
</style>
<h1 class="display-4">Crear Equipo</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Detalles del Equipo</h4>
        <hr />

        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Codigo" class="control-label">Código</label>
                <input asp-for="Codigo" class="form-control" required />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Almacenamiento" class="control-label">Almacenamiento</label>
                    <input asp-for="Almacenamiento" class="form-control" required />
                    <span asp-validation-for="Almacenamiento" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Ram" class="control-label">RAM</label>
                    <input asp-for="Ram" class="form-control" required />
                    <span asp-validation-for="Ram" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Procesador" class="control-label">Procesador</label>
                <input asp-for="Procesador" class="form-control" required />
                <span asp-validation-for="Procesador" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pantalla" class="control-label">Pantalla</label>
                <input asp-for="Pantalla" class="form-control" required />
                <span asp-validation-for="Pantalla" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Resolucion" class="control-label">Resolución</label>
                <input asp-for="Resolucion" class="form-control" required />
                <span asp-validation-for="Resolucion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Estado" />
                    <label class="form-check-label" asp-for="Estado">Activo</label>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            'use strict';

            var forms = document.querySelectorAll('.needs-validation');

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }

                        form.classList.add('was-validated');
                    }, false);
                });
        })();
    </script>
}
